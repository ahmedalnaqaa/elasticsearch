{% extends "::base.html.twig" %}

{# Page title #}
{% block title %}{{ parent() }} - test test{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="pull-right">
            <a href="{{ path("admin_categories_add") }}" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i> <span>Add Category</span>
            </a>
        </div>
        <h1>Categories</h1>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                                Action <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><a href="{{ path('admin_categories_edit', {'id': category.id}) }}">Edit</a></li>
                                <li><a href="{{ path('admin_categories_delete', {'id': category.id}) }}"
                                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}