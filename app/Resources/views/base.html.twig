<!DOCTYPE html>
<html>
<head>
    <meta charset="{{ _charset }}"/>

    <title>{% block title %}Blog {% endblock %}</title>
    <meta name="description"
          content="{% block meta_description %}{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#007dbe">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block htmlhead %}{% endblock %}

    <!-- Include stylesheets -->
    {% block stylesheets %}
        <link rel="stylesheet"
              href="{{ asset('builds/css/build'~ (app.environment == 'dev' ? '' : '.min') ~'.css') }}"/>
        {#<link rel="stylesheet" href="{{ asset('builds/css/bootstrap-rtl.min.css') }}"/>#}
        <link rel="stylesheet" href="//fonts.googleapis.com/earlyaccess/droidarabicnaskh.css"/>
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,600"/>
    {% endblock %}

</head>

<body>

{% block navigation %}
    {% include "::navbar.html.twig" %}
{% endblock %}

<div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% block categories %}
                    <div id="menu">
                        <ul class="nav nav-sidebar">
                            <li><a href="#">Technology</a></li>
                            <li><a href="#">Web</a></li>
                            <li><a href="#">Mobile</a></li>
                        </ul>
                    </div>
                {% endblock %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main-content">
                {% block body %}
                {% endblock %}
            </div>
        </div>
</div>
<!-- Javascript files -->
{% block javascripts %}

    <script src="{{ asset('builds/js/build'~ (app.environment == 'dev' ? '' : '.min') ~'.js') }}"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

{% endblock %}


</body>
</html>
